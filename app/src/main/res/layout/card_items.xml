<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/SingerPhoto"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_alignParentLeft="true" />

            <TextView
                android:id="@+id/SingerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/SingerPhoto"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/SingerGenres"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/SingerName"
                android:layout_below="@+id/SingerName"
                android:layout_marginTop="10dp"
                android:textColor="#798081" />

            <TextView
                android:id="@+id/SingerAlbumsTracks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/SingerName"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@+id/SingerPhoto"
                android:textColor="#808080" />


        </RelativeLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>